class board{
public:
    void PrintBoard();
    void SetBoard();
protected:
    figure*** Placements;
};
void board::SetBoard(){
    Placements = new figure**[8];
    for(int i = 0; i < 8; i++){
        Placements[i] = new figure*[8];
    }
}


